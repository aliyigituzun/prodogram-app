extends ../partials/header
block content
    .all-content-wrapper
        .background-wrapper
            .auth-wrapper
                .auth-input-wrapper
                    .auth-title-wrapper
                        .auth-title Sign Up
                    .each-auth-input-wrapper
                        input.short-input#name
                        input.short-input#surname
                    .each-auth-input-wrapper
                        input.long-input#email
                    .each-auth-input-wrapper
                        input.long-input#password(type='password')
                    .register-button-wrapper
                        .register-button Join Us
                            .register-button-background
                    .error-message-wrapper(style='display: none;')#error 
                .auth-image-wrapper
    .responsive-sidebar-wrapper#sidebar
        a.sidebar-title-text-wrapper(href='/')
            .title-text Title
        .sidebar
            a.each-sidebar-item(href='/page')= __('Page')
            a.translation-wrapper
                .translation-button#tr TR 
                .translation-button#en EN