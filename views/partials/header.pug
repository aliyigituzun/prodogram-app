extends ./head
block head
    .all-wrapper
        .header
            .navbar-wrapper
                a.title-text-wrapper(href='/')
                    .title-text.white PRO
                    .title-text.green DO
                    .title-text.white GRAM
                .navbar
                    a.each-navbar-item#project28(href='/project')= __('Project 28')
                    a.each-navbar-item(href='/program')= __('Paketler')
                    a.each-navbar-item(href='/library')= __('Kütüphane')
                    .preferences-icon-wrapper
                        i.preferences-icon.fa.fa-cog
                    .authentication-wrapper
                        if user
                            a.username-wrapper(href='/dashboard/profile')= user.name
                        else
                            a.authentication-button(href='/auth/register')= __('Join Us')
                    .responsive-sidebar-icon#sidebar-button
                        .responsive-sidebar-icon-bar
                        .responsive-sidebar-icon-bar
                        .responsive-sidebar-icon-bar
        .preferences-wrapper(style='display:none')
        block content